{
    "name": "windwalker/database",
    "type": "windwalker-package",
    "description": "Windwalker Database package",
    "keywords": ["windwalker", "framework", "database"],
    "homepage": "https://github.com/ventoviro/windwalker-database",
    "license": "LGPL-2.0-or-later",
    "require": {
        "php": ">=7.1.3",
        "psr/log": "1.*@stable",
        "windwalker/query": "~3.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "windwalker/utilities": "~3.0",
        "windwalker/test": "~3.0",
        "windwalker/compare": "~3.0",
        "windwalker/middleware": "~3.0"
    },
    "suggest": {
        "windwalker/compare": "Install 2.* if you want to use Compare object."
    },
    "minimum-stability": "beta",
    "autoload": {
        "psr-4": {
            "Windwalker\\Database\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    }
}
